<?xml version ="1.0" encoding ="utf-8"?>
<resources>
    <style name="buttonRow">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="button_Number">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/grey_200</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:onClick">numberInput</item>
    </style>
    <style name="button_Operation">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/grey_200</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:onClick">operationInput</item>
    </style>

    <style name="textView_Expression">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text"></item>
        <item name="android:lines">2</item>
        <item name="android:maxLines">2</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="textView_Value">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text"></item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/burgunty</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textSize">40sp</item>
    </style>
</resources>